<h1 class="mb-4"><%= @place["name"] %></h1>

<% if @current_user %>
  <%= link_to "New Entry", new_entry_path(place_id: @place["id"]), class: "btn btn-primary mb-4" %>
<% end %>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h6>
          <p class="card-text"><%= entry["description"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Back to All Places", places_path, class: "btn btn-secondary mt-3" %>
